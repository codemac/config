set attribution='* On %{%A, %B %d %Y}, %n wrote:\n'
set index_format="[%3C] %1N %Z %{%b %d} %-15.15n (%4l) %s"

#	the folder hooks handle this
#set record=+default

bind index "l"     list-reply
bind pager "l"     list-reply

# Set the From Line
set realname = "codemac"
set from = "j@codemac.net"

alternates = (i|jm|jmickey|codemac)@vt.edu|jeff@archlinux.org|codemac@gmail.com|j@codemac.net

set sort=threads

source ~/.mutt/gpg
# Always verify signatures by default.
set crypt_verify_sig=yes
set crypt_autosign=yes
